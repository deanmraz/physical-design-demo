{{speaker-image speaker=model}}

<div class="speakers-description description-header">
  {{#liquid-if editing}}
    {{input value=editorName}}
    {{textarea rows=3 value=editorBio}}
    <button {{action "save"}}>Save</button>
    <button {{action "cancel"}}>Cancel</button>    
  {{else}}
    <div class="top" {{ action "edit" }}>
      <h3>{{model.name}}</h3>
      <p>{{with-br model.bio}}</p>
    </div>
  {{/liquid-if}}
  <div class="bottom">
    <h4><span>Session:</span> {{model.session}}</h4>
  </div>
</div>
